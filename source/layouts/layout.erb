<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>LessMad - Ember.js and Ruby on Rails consultancy</title>
    <meta name="description" content="Consultants specialized in web development with Ember.js">
    <meta name="keywords" content="Ember.js,consulting,freelance,developer,full stack,html,css,javascript,training">

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= stylesheet_link_tag "medium", media: "screen and (max-width: 960px)" %>
    <%= stylesheet_link_tag "small", media: "screen and (max-width: 700px)" %>
    <%= javascript_include_tag  "all" %>

    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

    <%= partial 'google_analytics', locals: {tracking_code: 'UA-47173177-1', domain: 'lessmad.io'}  if build? %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial 'nav' %>
    <%= yield %>
    <%= partial 'footer' %>
  </body>
</html>
